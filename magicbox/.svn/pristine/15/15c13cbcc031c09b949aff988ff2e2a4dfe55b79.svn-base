        public function _before_goodsList() {
            // echo "<script> alert('"."i am controller " .CONTROLLER_NAME. " action _before_goodsList"."'); </script>";
            if (empty($_COOKIE["username"])) {
                cookie('preurl', U('goods/goodslist'));
