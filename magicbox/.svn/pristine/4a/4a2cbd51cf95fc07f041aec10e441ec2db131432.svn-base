        "http://www.w3.org/TR/html4/loose.dtd">
<html >
<head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>云柜管理 - 注册商品列表 - </title>
    <!-- 使用上面的最新 jquery 导致无法分页 -->
    <js href="__PUBLIC__/JS/jquery.js" />
    <js href="/server/Apps/Home/View/Version/VersionOperation.js" />
    <css href="__PUBLIC__/CSS/root.css" />
    <script type="text/JavaScript">
        $(function(){
            // 清空所有输入框
//            $(":input").each(function () {
//                $(this).val("");
//            })

            $("#goodsIntro").val("");
            $("#goodsPrice").val("");
            $("#goodsName").val("");
            $("#goodsType").val("");
            $("#goodsPhotoHidden").val("");
            $("#goodsPhotoPath").val("");
            $("#goodsPhotoForward").val("");

            function GoodsAddVerify() {
                alert("123454");

                return true;
            }

            $("#filesubmit").click(function () {
//                alert($("#goodsPhotoHidden").val());
                // $("#goodsPhoto").value = $("#goodsPhotoHidden").val();
                // document.getElementById("goodsPhotoForward").value = $("#goodsPhotoHidden").val();
//
//                document.goodsAddForm.action = "{:U('goods/upload')}";
////                document.goodsAddForm.attr("enctype", "multipart/form-data");
////                document.goodsAddForm.attr("encoding", "multipart/form-data");
//                document.goodsAddForm.encoding = "multipart/form-data";
//
//                document.goodsAddForm.submit();

                var formData = new FormData($("#goodsAddForm")[0]);
                $.ajax({
                    url: "{:U('goods/upload')}",
                    type: 'POST',
                    data: formData,
                    async: false,
                    cache: false,
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                    success: function (returndata) {
                        // alert(returndata['goodsPhotoSubmit']['savename']);
                        // alert(returndata['savePaths']);
                        // alert(returndata);
                        alert('上传成功');
                        //alert("")
                        // alert(returndata['savePaths']+returndata['goodsPhotoSubmit']['savepath']+returndata['goodsPhotoSubmit']['savename']);
                        document.getElementById("goodsPhotoPath").value = returndata['savePaths']+returndata['goodsPhotoSubmit']['savename'];
                    },
                    error: function (returndata) {
                        alert(returndata);
                    }
                });
            })

            $("#goodsAddSubmit").click(function () {
                if (0 == $("#goodsPhotoPath").val().length) {
                    alert("请先上传商品图片");
                    return false;
                }
                if (0 == $("#goodsType").val().length) {
                    alert("请填写商品类型");
                    $("#goodsType").focus();
                    return false;
                }
                if (0 == $("#goodsName").val().length) {
                    alert("请填写商品名称");
                    $("#goodsName").focus();
                    return false;
                }
                if (0 == $("#goodsPrice").val().length) {
                    alert("请填写商品价格");
                    $("#goodsPrice").focus();
                    return false;
                }
                if (0 == $("#goodsIntro").val().length) {
                    alert("请填写商品介绍");
                    $("#goodsIntro").focus();
                    return false;
                }

                document.goodsAddForm.action = "{:U('goods/newgoodsadd')}";
                document.goodsAddForm.submit();
            })

//            $("#goodsPhotoHidden").onchange(function () {
//                document.getElementById("goodsPhotoForward").value = $("#goodsPhotoHidden").val();
//            })
        });
    </script>
</head>
